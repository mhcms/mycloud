FROM ubuntu:20.04

RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    nano \
    openssh-server \
    && rm -rf /var/lib/apt/lists/*

RUN echo 'root:hanhan..' | chpasswd
RUN mkdir /var/run/sshd
RUN sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin yes/' /etc/ssh/sshd_config
CMD ["/bin/bash"]
EXPOSE 22
